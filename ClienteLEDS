#include <WiFi.h>

const char *ssid = "SLAYER";
const char *password = "Vanguardia2021";
int pin[6]={2,4,5,18,19,21};
int last_One;

void setup() {
  for(int i = 0;i<6;i++){
    pinMode(pin[i], OUTPUT);
  }  
  Serial.begin(115200);
   
  WiFi.begin(ssid, password);

  Serial.print("Conectando...");
  while (WiFi.status() != WL_CONNECTED) { //Check for the connection
    delay(500);
    Serial.print(".");
  }
  Serial.print("Conectado con Ã©xito, mi IP es: ");
  Serial.println(WiFi.localIP());
}

void loop() {
   WiFiClient client;
   const uint16_t port = 8080;
   const char * host ="192.168.0.168";
  if(!client.connect(host,port)){
     Serial.println("Coneccion fallida.");
        Serial.println("Espere...");
        delay(5000);
        return;
  }
  Serial.println("Conectado");
  String line = client.readStringUntil('\n'); 
                Serial.print("Pin a prender:");
                Serial.println(line);
                client.write(line.c_str());
  int i= line.toInt();
  digitalWrite(last_One, LOW);
  digitalWrite(i, HIGH);
  last_One=i;
  delay(5000);
    client.stop();
}
